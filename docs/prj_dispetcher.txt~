CREATE TABLE USERS
(
    ID INTEGER AUTO_INCREMENT PRIMARY KEY NOT NULL,
    LOGIN CLOB NOT NULL,
    PASSWORD CLOB NOT NULL,
    FULL_NAME CLOB NOT NULL,
    GROUP_ID CLOB NOT NULL
);

CREATE TABLE GROUPS
(
    ID INTEGER AUTO_INCREMENT PRIMARY KEY NOT NULL,
    GROUP_NAME CLOB NOT NULL
);

